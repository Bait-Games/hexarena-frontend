{#result}
    <div class="players_item">
        <div class="badge" style="background-color: {playerColor}">{score}</div>
        <div class="player_info">
            <h2>@{username}</h2>
            {?active}
                <p>Playing</p>
            {/active}
        </div>
    </div>
{:else}
    <div style="margin:20px;">Nobody played so far</div>
{/result}